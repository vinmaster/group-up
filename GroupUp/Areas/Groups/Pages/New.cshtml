@page
@model GroupUp.Areas.Groups.Pages.NewModel
@{
    ViewData["Title"] = "New Group";
}

<h1>New Group</h1>

<hr />

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">@ViewData["Error"]</div>
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="groupDTO.Name" class="control-label"></label>
                <input asp-for="groupDTO.Name" class="form-control" />
                <span asp-validation-for="groupDTO.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
