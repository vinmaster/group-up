@page
@model GroupUp.Areas.My.Pages.AccountModel
@{
    ViewData["Title"] = "Account";
}

<h1>Account</h1>

<hr />

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">@ViewData["Error"]</div>
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userDTO.Id" class="control-label"></label>
                <input readonly asp-for="userDTO.Id" class="form-control" />
                <span asp-validation-for="userDTO.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userDTO.Email" class="control-label"></label>
                <input readonly asp-for="userDTO.Email" class="form-control" />
                <span asp-validation-for="userDTO.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userDTO.UserName" class="control-label"></label>
                <input readonly asp-for="userDTO.UserName" class="form-control" />
                <span asp-validation-for="userDTO.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userDTO.FirstName" class="control-label"></label>
                <input asp-for="userDTO.FirstName" class="form-control" />
                <span asp-validation-for="userDTO.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userDTO.LastName" class="control-label"></label>
                <input asp-for="userDTO.LastName" class="form-control" />
                <span asp-validation-for="userDTO.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userDTO.LastSignInAt" class="control-label"></label>
                <input readonly asp-for="userDTO.LastSignInAt" class="form-control" />
                <span asp-validation-for="userDTO.LastSignInAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}